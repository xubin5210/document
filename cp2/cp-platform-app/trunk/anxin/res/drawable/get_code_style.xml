<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="false"><shape>
            <solid android:color="@color/C7" />
            <corners android:radius="4.5dp" />
        </shape></item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/C6" />
            <corners android:radius="4.5dp" />
            <stroke android:width="0.8dp"
                android:color="@color/C3"/>
        </shape></item>

</selector>