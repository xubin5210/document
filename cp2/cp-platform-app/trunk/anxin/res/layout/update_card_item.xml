<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/update_item"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/left_right"
        android:paddingRight="@dimen/left_right"
        android:background="@drawable/exchange_bg_bottom"
        android:paddingBottom="@dimen/left_right"
        android:paddingTop="@dimen/left_right" >

        <com.ciapc.anxin.common.view.RoundView
            android:id="@+id/update_card_head"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:scaleType="center"
            android:src="@drawable/toux_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/update_card_head"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/update_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/C1"
                android:textSize="@dimen/H3" />

            <TextView
                android:id="@+id/update_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/C2"
                android:textSize="@dimen/H5" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/exchange_bg_bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/left_right"
        android:paddingRight="@dimen/left_right"
        android:paddingBottom="20dp"
        android:paddingTop="@dimen/left_right" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/update_status"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:background="@drawable/job_type"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/H5" />

            <TextView
                android:id="@+id/update_time"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:textColor="@color/C3"
                android:textSize="@dimen/H5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/left_right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/update_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center_vertical|left"
                android:textColor="@color/C1"
                android:textSize="@dimen/H4" />

            <TextView
                android:id="@+id/update_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:textColor="@color/C1"
                android:textSize="@dimen/H4" />
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/left_right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/update_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center_vertical|left"
                android:textColor="@color/C1"
                android:textSize="@dimen/H4" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>