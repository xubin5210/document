<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/item"
    android:layout_height="match_parent"
    android:background="@drawable/exchange_bg_bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/left_right"
        android:paddingTop="@dimen/left_right" >

        <com.ciapc.anxin.common.view.RoundView
            android:id="@+id/new_card_accept_head"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginLeft="@dimen/left_right"
            android:layout_weight="2.5"
            android:src="@drawable/toux_default" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/left_right"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="7" >

            <TextView
                android:id="@+id/new_card_accept_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:textColor="@color/C7"
                android:textSize="@dimen/H4" />

            <TextView
                android:id="@+id/new_card_accept_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_card_accept_name"
                android:ellipsize="end"
                android:gravity="center|left"
                android:singleLine="true"
                android:textColor="@color/C2"
                android:textSize="@dimen/H5" />
        </RelativeLayout>

        <Button
            android:id="@+id/new_card_accept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="4"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/left_right"
            android:paddingRight="@dimen/left_right"
            android:textColor="@color/C6"
            android:textSize="@dimen/H5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/exchange_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >

        <com.ciapc.anxin.common.view.RoundView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/left_right"
            android:layout_weight="2.5"
            android:src="@drawable/toux_default"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right"
            android:layout_weight="11.5"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/apply_type"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="2"
                android:background="@drawable/register_input_pwd_style"
                android:gravity="center"
                android:textColor="@color/C7"
                android:textSize="@dimen/H5" />

            <TextView
                android:id="@+id/apply_note"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="7"
                android:gravity="left"
                android:paddingLeft="@dimen/left_right"
                android:textColor="@color/C2"
                android:textSize="@dimen/H4" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>