<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >
        

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right"
            android:drawableLeft="@drawable/home_person"
            android:drawablePadding="@dimen/left_right"
            android:gravity="center_vertical"
            android:text="@string/person_info"
            android:textColor="@color/C6"
            android:textSize="@dimen/H2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/left_right"
            android:background="@color/C4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/left_right" >

            <TextView
                android:id="@+id/home_new_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/left_right"
                android:drawableLeft="@drawable/home_new_card"
                android:drawablePadding="@dimen/left_right"
                android:gravity="center_vertical"
                android:text="@string/new_card"
                android:textColor="@color/C6"
                android:textSize="@dimen/H2" />

            <Button
                android:id="@+id/home_red_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/left_right"
                android:layout_marginRight="100dp"
                android:background="@drawable/red_point"
                android:text="3"
                android:textColor="@color/white" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/left_right"
            android:background="@color/C4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/home_contacts"
            android:drawablePadding="@dimen/left_right"
            android:gravity="center_vertical"
            android:text="@string/contacts"
            android:textColor="@color/C6"
            android:textSize="@dimen/H2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/left_right"
            android:background="@color/C4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/left_right"
            android:layout_marginLeft="@dimen/left_right"
            android:drawableLeft="@drawable/home_company_contacts"
            android:drawablePadding="@dimen/left_right"
            android:gravity="center_vertical"
            android:text="@string/company_contact"
            android:textColor="@color/C6"
            android:textSize="@dimen/H2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/left_right"
            android:background="@color/C4" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right"
            android:drawableLeft="@drawable/home_set"
            android:drawablePadding="@dimen/left_right"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:text="@string/home_set"
            android:textColor="@color/C6"
            android:textSize="@dimen/H2" />
        
         <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/left_right"
            android:background="@color/C4" />
        
        
    </LinearLayout>

    </LinearLayout>
